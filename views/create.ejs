<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>Employee Details</title>
</head>
<body>
    <div>
        <form action="/create" method="post" class="form" enctype="multipart/form-data">
            <div class="mb-3 row">
                <label for="empname" class="col-sm-2 col-form-label">Employee Name</label>
                <div>
                    <input type="text" class="form-control" id="empname" name="eName">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="empage" class="col-sm-2 col-form-label">Employee Age</label>
                <div>
                    <input type="text" class="form-control" id="empage" name="eAge">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="empsal" class="col-sm-2 col-form-label">Employee Salary</label>
                <div>
                    <input type="text" class="form-control" id="empsal" name="eSal">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="depname" class="col-sm-2 col-form-label">Department Name</label>
                <div>
                   <select name="depId" id="depname">

                    <% for(var i = 0 ; i < departments.length ; i++){ %>
                        
                        <option value="<%= departments[i].id %>"> <%= departments[i].name %> </option>

                     <% }; %>
                    
                   </select>
                 
                </div>
            </div>

            <div class="mb-3 row">
                <label for="report" class="col-sm-2 col-form-label">Reporting to</label>
                <div>
                   <select name="report" id="report">

                    <% for(var j = 0 ; j < rep.length ; j++){ %>
                        
                        <option value="<%= rep[j].id %>"> <%= rep[j].emp_name %> </option>

                     <% }; %>
                    
                   </select>
                 
                </div>
            </div>
            <div class="mb-3 row">
                <label for="img" class="col-sm-2 col-form-label">Upload Image</label>
                <div>
                  <input type="file" name = "myFile" id="img">
                 
                </div>
            </div>


            <div class="but1">
                <button type="submit" class="btn btn-outline-secondary btn-lg">Enter</button>
            </div>
        </form>
    </div>
</body>
</html>